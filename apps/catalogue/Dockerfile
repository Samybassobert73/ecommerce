# Run the container with `docker run -p 3000:3000 -t catalogue`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system catalogue && \
          adduser --system -G catalogue catalogue

COPY dist/apps/catalogue catalogue/
RUN chown -R catalogue:catalogue .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix catalogue --omit=dev -f install

CMD [ "node", "catalogue" ]
