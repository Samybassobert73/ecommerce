# Build the docker image with `npx nx docker-build order`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t order`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system order && \
          adduser --system -G order order

COPY dist/apps/order/ order/
RUN chown -R order:order .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix order --omit=dev -f install

CMD [ "node", "order" ]
